<div class=" flex flex-col justify-center py-12 ">
  <div class="sm:mx-auto sm:w-full sm:max-w-md">
    <div class="mt-8 flex justify-center">
      <div class="size-12 rounded-full bg-teal-400 text-teal-400">.</div>
    </div>
    <h2 class="mt-6 text-center text-3xl font-extrabold">Welcome back</h2>
  </div>

  <div class="my-4">
    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="p-4">
        <%= f.input :email,
                required: false,
                autofocus: true,
                label: false,
                input_html: {
                  class:
                    "border-slate-300 shadow-md pl-4 my-4 focus:border-none focus:ring-2 focus:ring-teal-400 rounded-xl w-full",
                  autocomplete: "email",
                  placeholder: "muster@spot.de",
                } %>

        <%= f.input :password,
                required: false,
                label: false,
                input_html: {
                  class:
                    "border-slate-300 shadow-md pl-4 my-4 focus:border-none focus:ring-2 focus:ring-teal-400 rounded-xl w-full",
                  autocomplete: "current-password",
                  placeholder: "password",
                } %>
        <% if devise_mapping.rememberable? %>
          <div class="flex">
            <%= f.input :remember_me,
                    as: :boolean,
                    label: false,
                    input_html: {
                      class: "focus:ring-0",
                    } %>
            <p class="ml-2 text-gray-500">Remember me</p>
          </div>
        <% end %>
      </div>
      <div class="form-actions">
        <%= button_tag(type: 'submit', class: "w-full px-4") do %>
          <%= render "shared/button_primary", text: "Log in" %>
        <% end %>
      </div>
    <% end %>
  </div>
  <div class="flex items-center px-4 pb-8">
    <div class="h-1 w-full border-b border-slate-300"></div>
    <div class="mx-3 text-slate-300">Or</div>
    <div class="h-1 w-full border-b border-slate-300"></div>
  </div>
  <div class="px-4">
    <%= link_to new_registration_path(resource_name) do %>
      <%= render "shared/button_secondary", text: "Sign up" %>
    <% end %>
    <div class="mt-16 flex justify-center">
      <%= link_to "Forgot your password?",
      new_password_path(resource_name),
      class: "text-sm text-gray-400" %><br/>
    </div>
  </div>
</div>
