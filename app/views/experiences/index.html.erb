<!--HEADER-->
<div class="mt-8 flex items-center justify-between">
  <div class="flex">
    <div class="h-9 w-9 rounded-full bg-teal-400 text-teal-400">.</div>
    <div class="ml-2 flex text-4xl font-bold">experiences</div>
  </div>
</div>

<%= link_to new_experience_path(@experiences) do %>
  <div class="mt-6 mb-2 pb-6 border-b-2 border-gray-100">
    <%= render "shared/button_primary", text: "Add an experience" %>
  </div>
<% end %>

<% if @spot %>
  <div class="border-b-2">
    <%= render "shared/card_spot_bookmark", spot: @spot %>
  </div>
<% end %>

<div class="divide-y-2 divide-gray-100">
  <% @experiences.each do |experience| %>
    <%= render "shared/experience", experience: experience %>
  <% end %>
</div>
