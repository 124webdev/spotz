      <div class="mt-2 text-center">
        <h2>@Jamiroquai</h2>
      </div>
    </div>
  </div>

    <div data-controller="toggle">

      <div class="mt-4 mb-8 flex justify-evenly space-around text-sm text-gray-600">
        <div>
          <span data-action="click->toggle#showVisits" data-toggle-target="visitsHeader" class="cursor-pointer">25 Visits</span>
        </div>
        <div> | </div>
        <div>
          <span data-action="click->toggle#showExperiences" data-toggle-target="experiencesHeader" class="cursor-pointer">12 Experiences</span>
        </div>
        <div> | </div>
        <div>
          <span data-action="click->toggle#showReviews" data-toggle-target="reviewsHeader" class="cursor-pointer">132 Reviews</span>
        </div>
      </div>

      <div>
        <div id="visits" data-toggle-target="visits" class="hidden">
          <% @visits.each do |visit| %>
            <%= render "shared/card_spot_bookmark", spot: visit.spot %>
          <% end %>
        </div>

        <div id="experiences" data-toggle-target="experiences" class="hidden">
          <% @bookmarks.each do |bookmark| %>
            <%= link_to spot_path(bookmark.spot) do %>
              <div class="mb-8 mt-4">
                <%= render "shared/card_spot_bookmark", bookmark: bookmark, spot: bookmark.spot %>
              </div>
            <% end %>
          <% end %>
        </div>

        <div id="reviews" data-toggle-target="reviews" class="hidden">
          <%= render "shared/review" %>
        </div>
      </div>

    </div>
