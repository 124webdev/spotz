<!-- Slider main container -->
<div class="swiper relative -mx-4 -mt-12 h-72">
  <!-- Additional required wrapper -->
  <div class="swiper-wrapper w-full ">
    <!-- Slides -->
    <% 10.times do %>
      <div class="swiper-slide w-full bg-gradient-to-b">

        <img
          class="my-transparency-gradient h-full w-full object-cover"
          src="https://images.unsplash.com/photo-1603787935137-58167f55336f?q=80&w=1965&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D"
          alt="what"
        >
      </div>
    <% end %>
  </div>
  <!-- If we need pagination -->
  <div class="swiper-pagination pb-4"></div>
  <!-- If we need navigation buttons -->
  <div class="swiper-button-prev mb-4">
    <svg
      xmlns="http://www.w3.org/2000/svg"
      fill="none"
      viewBox="0 0 24 24"
      stroke-width="2"
      stroke="black"
      class="size-1 rounded-full bg-white p-1 shadow-xl"
    >
      <path
        stroke-linecap="round"
        stroke-linejoin="round"
        d="M15.75 19.5 8.25 12l7.5-7.5"
      />
    </svg>

  </div>
  <div class="swiper-button-next mb-4"><svg
      xmlns="http://www.w3.org/2000/svg"
      fill="none"
      viewBox="0 0 24 24"
      stroke-width="2"
      stroke="black"
      class="size-1 rounded-full bg-white p-1 shadow-xl"
    >
      <path
        stroke-linecap="round"
        stroke-linejoin="round"
        d="m8.25 4.5 7.5 7.5-7.5 7.5"
      />
    </svg>
  </div>
</div>

