<div
  class="
    no-scrollbar -mx-4 mt-4 inline-flex w-screen snap-x flex-nowrap overflow-x-auto
    pb-10
  "
>
  <div class="ml-4 flex">
    <% spots[1..10].each do |spot| %>
      <%= link_to spot_path(spot) do %>
        <%= render "card_spot_home", spot: spot %>
      <% end %>
    <% end %>
  </div>
</div>
