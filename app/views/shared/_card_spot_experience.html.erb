<div class="relative my-4 flex h-28 w-full rounded-xl">
  <%= link_to spot_path(spot) do %>
    <div class="absolute h-full w-11/12"></div>
  <% end %>
  <%= cl_image_tag(
    spot.photos.first.key,
    class: "h-full w-1/3 rounded-lg object-cover",
  ) %>
  <div class="w-2/3">
    <div class="ml-4 flex h-full flex-col justify-between">
      <div>
        <div class="flex items-center justify-between ">
          <p class="text-s font-semibold"><%= spot.name %></p>
          <!-- trashcan -->
          <% if experience.user = current_user %>
            <svg
              xmlns="http://www.w3.org/2000/svg"
              fill="none"
              viewBox="0 0 24 24"
              stroke-width="1.5"
              stroke="currentColor"
              class="size-5 text-red-600"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                d="m14.74 9-.346 9m-4.788 0L9.26 9m9.968-3.21c.342.052.682.107 1.022.166m-1.022-.165L18.16 19.673a2.25 2.25 0 0 1-2.244 2.077H8.084a2.25 2.25 0 0 1-2.244-2.077L4.772 5.79m14.456 0a48.108 48.108 0 0 0-3.478-.397m-12 .562c.34-.059.68-.114 1.022-.165m0 0a48.11 48.11 0 0 1 3.478-.397m7.5 0v-.916c0-1.18-.91-2.164-2.09-2.201a51.964 51.964 0 0 0-3.32 0c-1.18.037-2.09 1.022-2.09 2.201v.916m7.5 0a48.667 48.667 0 0 0-7.5 0"
              />
            </svg>

          <% end %>
        </div>
        <p class="text-description flex items-center align-middle font-light">3.5
          <svg
            xmlns="http://www.w3.org/2000/svg"
            viewBox="0 0 24 24"
            fill="currentColor"
            class="mx-1 h-4 w-4 pb-px"
          >
            <path
              fill-rule="evenodd"
              d="M10.788 3.21c.448-1.077 1.976-1.077 2.424 0l2.082 5.006 5.404.434c1.164.093 1.636 1.545.749 2.305l-4.117 3.527 1.257 5.273c.271 1.136-.964 2.033-1.96 1.425L12 18.354 7.373 21.18c-.996.608-2.231-.29-1.96-1.425l1.257-5.273-4.117-3.527c-.887-.76-.415-2.212.749-2.305l5.404-.434 2.082-5.005Z"
              clip-rule="evenodd"
            />
          </svg>
          <span class="text-teal-400">â€¢ 3.5km away</span>
        </p>
      </div>
      <p class="text-description font-light"><%= spot.description[0..70] %>...</p>
    </div>
  </div>
</div>
